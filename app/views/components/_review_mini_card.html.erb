<div class="review-mini-card">
  <div class="d-flex">
    <div class="col-3">
      <% if review.photos.any? %>
        <%= image_tag review.photos.first, class: "review-card-photo" %>
      <% else %>
        <%= image_tag 'review-photo.jpg', class: "review-card-photo" %>
      <% end %>
    </div>
    <div class="ms-2 col">
      <div class="row">
        <div class="d-flex">
          <i class="fa-solid fa-location-dot me-2"></i>
          <h5><%= review.route.title %></h5>
        </div>
        <div class="d-flex">
          <% review.rating.times do %>
            <i class="fa-solid fa-star"></i>
          <% end %>
        </div>
        <p><%= review.description %></p>
        <div class="d-flex justify-content-between">
          <small><%= review.user.username %></small>
          <small><%= review.date.strftime("%B %d, %Y") %></small>
        </div>
      </div>
    </div>
  </div>
</div>
