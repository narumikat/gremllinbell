<div class="search-bar d-flex">
  <div class="col-11">
    <form class="d-flex" role="search" action="<%= search_results_path %>" method="get">
      <input class="form-control" type="search" placeholder="Search Routes, users..." aria-label="Search" name="query">
      <button class="btn" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </form>
  </div>
  <div class="col ms-2 d-flex align-items-center justify-content-center">
    <button type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
      <i class="fa-solid fa-bars"></i>
    </button>
  </div>
</div>
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
  <div class="offcanvas-header">
    <%= image_tag 'logo-red.svg', class:"logo-icon" %>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <div class="routes-tags">
      <div class="container">
        <div class="row justify-content-center" data-controller="route-search" data-route-search-prefectures-value="<%= @region_prefectures.to_json %>">
          <p>Start by Selecting your Region:</p>
            <% @region_prefectures.keys.each do |region| %>
            <div class="col-md-3 col-6 text-center mb-2">
                <span class="route-tag rounded-pill" data-action="click->route-search#expandPrefectures"><%= region %></span>
              </div>
          <% end %>
          <p data-route-search-target="pElement"></p>
            <% @prefectures.each do |prefecture| %>
            <div id="<%= prefecture %>" class="col-md-3 col-6 text-center mb-2 d-none" data-route-search-target="prefectures">
              <%= link_to routes_path(query: {prefecture: prefecture }) do %>
                <span class="route-tag rounded-pill"><%= prefecture %></span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
