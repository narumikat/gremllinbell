<div class="bg-red">
  <div class="container">
    <%= render 'shared/logo_btn_top_white', user: (@user || current_user) %>
    <%= render 'shared/link_user_profile', user: (@user || current_user) %>
  </div>
  <div class="bg-white">
    <div class="container headers-gray">
      <div class="row justify-content-center">
        <div class="col-11 col-md-8">
          <h3 class="text-center mb-4"><%= @user.first_name %>'s posts</h3>
          <div>
            <% @posts.each do |post| %>
              <div class="mb-2">
                <%= render 'posts/card', post: post %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
